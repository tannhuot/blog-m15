@page
@model blog_m15.Pages.Post.CreateModel
@{
	ViewData["Title"] = "Create";
}

<div class="container my-5">
    <div class="row">
        <div class="d-flex justify-content-between mb-2">
            <h3>Create Post</h3>
            <a class="btn btn-success" asp-page="/post/index" role="button">Back</a>
        </div>
        <!-- Blog entries-->
        <div class="col-lg-12">
            <div class="card p-3">
                <div asp-validation-summary="All"></div>
                <form method="POST" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label asp-for="Post.Title" class="form-label">Title</label>
                        <input type="text"
                               class="form-control"
                               asp-for="Post.Title" />
                        <span asp-validation-for="Post.Title"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Post.Content" class="form-label">Content</label>
                        <textarea class="form-control"
                                  asp-for="Post.Content"
                                  rows="5"></textarea>
                        <span asp-validation-for="Post.Content"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Post.Imgfile" class="form-label">Choose Thumbnail</label>
                        <input class="form-control"
                               type="file"
                               asp-for="Post.Imgfile" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="SelectedCategory" class="form-label">Category</label>
                        <select class="form-select"
                                   asp-for="SelectedCategory"
                                   asp-items="Model.CategoryItems"
                                aria-label="Default select example">
                            <option selected>Select Category</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="tags" class="form-label">Tag</label>
                        <div class="tag-wrapper">
                            @foreach(var item in Model.Tags) {
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input"
                                           type="checkbox"
                                           name="SelectedTags"
                                           value="@item.Id"
                                           id="tag-@item.Id" />
                                    <label class="form-check-label" for="tag-@item.Id">@item.Name</label>
                                </div>
                            }
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>